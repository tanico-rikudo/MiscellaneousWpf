<UserControl x:Class="LiveChartPlay.Views.WorkTimeInputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBox Text="{Binding StartDateTime.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
        <TextBox Text="{Binding EndDateTime.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
        <TextBox Text="{Binding Comment.Value, Mode=TwoWay}" Margin="0,5"/>
        <Button Content="Diff" Command="{Binding SendCalculateWorkTime}" Height="30" Margin="0,5"/>
    </StackPanel>
</UserControl>
